{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "target": "es2021",
    "baseUrl": "./",
    "noUnusedLocals": false,
    "paths": {
      "@filters": ["src/shared/filters"],
      "@interceptors": ["src/shared/interceptors"],
      "@types": ["src/shared/types"],
      "@prismax": ["src/prisma/client"],
      "@prismax/*": ["src/prisma/client/*"],
      "@services": ["src/shared/services"],
      "@constants": ["src/shared/constants"],
      "@utils": ["src/shared/utils"],
      "@loggers": ["src/shared/loggers"],
      "@decorators": ["src/shared/decorators"],
      "@transformers": ["src/shared/transformers"],
      "@guards": ["src/shared/guards"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["out-tsc", "dist", "jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "references": [
    {
      "path": "../../libs/shared/platform/tsconfig.lib.json"
    },
    {
      "path": "../../libs/shared/types/tsconfig.lib.json"
    },
    {
      "path": "../../libs/shared/factory/tsconfig.lib.json"
    },
    {
      "path": "../../libs/shared/dto/tsconfig.lib.json"
    }
  ]
}
